{
  "name": "syncify",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "server",
    "shared"
  ],
  "main": "build/index.js",
  "scripts": {
    "start": "run-p build:watch serve:watch",
    "test": "jest --watch",
    "build": "tsc -b tsproject.json",
    "build:watch": "yarn build --watch",
    "serve": "node .",
    "serve:watch": "nodemon --delay 1 build/index.js",
    "lint": "tslint --project tsproject.json",
    "prettier": "yarn prettier \"{,!(node_modules)/**/}*\""
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.12",
    "@types/node": "^11.13.9",
    "babel-jest": "^24.8.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.0",
    "ts-node-dev": "^1.0.0-pre.35",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.5"
  }
}
